package com.Luiz.domingo;

public class PessoaFisica extends Pessoa
{
	/* Atributos Da class Pessoa Fisica*/
	private String cpf;
	private double renda;
	
	/* Construtor da class pessoa fisica */
	public PessoaFisica(String cpf, double renda, String nome, String telefone, String endereco) {
		super(nome, telefone, endereco); //Chamada ao construtor da super calss Pessoa
		this.cpf = cpf;
		this.renda = renda;
	}
	
	/* Metodos Getters e setters */
	
	public String getCpf() {
		return this.cpf;
	}
	
	public void setCpf(String cpf) {
		this.cpf = cpf;
	}
	
	public double getRenda() {
		return this.renda;
	}
	
	public void setRenda(double renda) {
		this.renda = renda;
	}
	
	/* Metod para calcular o imposto de renda da pessoa fisica  */
	public double calcularImposto() {
		if(renda <= 20000)
		{
			return 0;
		}
		else if(renda <= 40000)
		{
			
		}
		else 
		{
			return renda * 0.25; // se a renda for maior que 40.000 o imposto Ã© de 25%
		}
	}
	
}
